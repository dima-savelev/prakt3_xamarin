<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="app3.RegPage" Title="Авторизация">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="loginEntry" Placeholder="Введите логин" Margin="10,0,0,0"></Entry>
            <Entry x:Name="passwordEntry" Placeholder="Введите пароль" Margin="10,0,0,0"></Entry>
            <Button Text="Войти" Clicked="Login_Clicked"></Button>
            <Button Text="Выход" Clicked="Exit_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>